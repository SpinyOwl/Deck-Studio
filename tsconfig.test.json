{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist-tests",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "src/app/services/**/*.ts",
    "src/app/types/**/*.ts",
    "src/app/global.d.ts"
  ]
}
